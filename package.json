{
  "name": "dsp-kit-tools",
  "private": true,
  "scripts": {
    "build": "lerna run pretest",
    "test": "lerna run test",
    "docs": "npm run docs:html && npm run docs:modules",
    "docs:html": "jsdoc -c .jsdoc3.json",
    "docs:modules": "lerna run docs",
    "dist": "npm run dist:pack && npm run dist:minify && ls -hall dist/",
    "dist:pack": "browserify packages/dsp/browser.js -o dist/dsp-kit.js",
    "dist:minify": "uglifyjs dist/dsp-kit.js > dist/dsp-kit.min.js",
    "benchmarks": "npm run benchmarks:forward",
    "benchmarks:forward": "node benchmarks/forward.js",
    "benchmarks:inverse": "node benchmarks/inverse.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babelify": "^7.3.0",
    "benchmark": "^2.1.3",
    "fft": "^0.2.1",
    "jsdoc-to-markdown": "^2.0.1",
    "lerna": "2.0.0-beta.30",
    "microtime": "^2.1.2",
    "postman-jsdoc-theme": "0.0.2",
    "rollup": "^0.38.3",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-cleanup": "^0.1.4",
    "rollup-plugin-node-resolve": "^2.0.0",
    "standard": "^8.6.0",
    "tst": "^1.3.1"
  },
  "standard": {
    "ignore": [
      "dist/*",
      "*.md"
    ]
  },
  "dependencies": {
    "almost-equal": "^1.1.0"
  }
}
